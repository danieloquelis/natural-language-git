{
  "name": "nlgit",
  "version": "0.1.0",
  "description": "Natural Language Git - A CLI tool that interprets natural language instructions and performs Git operations",
  "main": "dist/index.js",
  "bin": {
    "nlgit": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "git",
    "cli",
    "natural-language",
    "llm",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "node-llama-cpp": "^3.1.1",
    "@inquirer/prompts": "^7.0.1",
    "chalk": "^5.3.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.17.6",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
