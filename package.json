{
  "name": "natural-language-git",
  "version": "0.1.0",
  "description": "Natural Language Git - A CLI tool that interprets natural language instructions and performs Git operations",
  "main": "dist/index.js",
  "type": "module",
  "packageManager": "yarn@4.5.3",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["git", "cli", "natural-language", "llm", "ai"],
  "author": "Daniel Oquelis",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.1",
    "chalk": "^5.3.0",
    "node-llama-cpp": "^3.1.1",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
